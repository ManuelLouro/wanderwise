datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id     String  @id @default(uuid())
  name   String
  events Event[] @relation("TripEvents")
}

model Event {
  id          String  @id @default(uuid())
  description String?
  name        String
  time        String?
  date        String?
  location    String?
  pdfUrl      String?
  trip        Trip?   @relation("TripEvents", fields: [tripId], references: [id])
  tripId      String?
}

model Profile {
  id        String   @id @default(uuid())
  auth0Id   String   @unique
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now())

}

