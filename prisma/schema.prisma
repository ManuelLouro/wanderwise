datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
   id         String      @id @default(uuid())
   name       String
   categories Category[]  @relation("TripCategories")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  trip       Trip?     @relation("TripCategories", fields: [tripId], references: [id])
  tripId     String?
  events     Event[]
}

model Event {
  id        String   @id @default(uuid())
  name      String
  time      String?
  date      String?
  location  String?
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId String
}
